{
  "name": "@isildur-testing/extension",
  "displayName": "Isildur",
  "description": "Display and run your tests, no matter what runner you're using! (currently support Jest and Mocha)",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": [
      {
        "title": "Isildur",
        "properties": {
          "isildur.testRunner": {
            "type": "string",
            "default": "Mocha",
            "enum": [
              "Jest",
              "Mocha"
            ],
            "description": "The test runner you're using"
          }
        }
      }
    ]
  },
  "activationEvents": [
    "workspaceContains:**/*.{js,ts,jsx,tsx,mjs,cjs,mts,cts}"
  ],
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "build": "pnpm run compile",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "@isildur-testing/api": "workspace:*",
    "@isildur-testing/core": "workspace:*",
    "tsup": "^6.7.0"
  },
  "devDependencies": {
    "@types/glob": "^8.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.78.0",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "@vscode/test-electron": "^2.2.2",
    "eslint": "^8.33.0",
    "glob": "^8.1.0",
    "mocha": "^10.1.0",
    "tsconfig": "workspace:*",
    "typescript": "^4.9.4"
  }
}
